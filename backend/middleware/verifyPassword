const passwordSchema = require('../models/password');

module.exports = (req, res, next) => {
    if(!passwordSchema.validate(req.body.password)) {
        res.send("Mot de passe requis : Doit contenir au moins 8 caract√®res dont au moins 1 majuscule, 1 minuscule et un chiffre et aucun espace");
    } else {
        next();
    }
};